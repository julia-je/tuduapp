<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.vanitygoods.tudu"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".application.TodoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.createtodotask.view.CreateTaskActivity"
            android:parentActivityName=".ui.main.view.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />
    </application>

</manifest>